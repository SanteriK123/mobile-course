<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:background="#EDE2CA"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgClass"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wizard" />

    <ImageView
        android:id="@+id/imgRace"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/human" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imgRace"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class"
        app:layout_constraintStart_toEndOf="@+id/imgRace"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <TextView
        android:id="@+id/txtRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race"
        app:layout_constraintStart_toEndOf="@+id/imgRace"
        app:layout_constraintTop_toBottomOf="@+id/txtClass" />

    <TextView
        android:id="@+id/txtStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strength"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtConstitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Constitution"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStrength" />

    <TextView
        android:id="@+id/txtDexterity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dexterity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtConstitution" />

    <TextView
        android:id="@+id/txtIntelligence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intelligence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDexterity" />

    <TextView
        android:id="@+id/txtWisdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wisdom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIntelligence" />

    <TextView
        android:id="@+id/txtCharisma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charisma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWisdom" />

</androidx.constraintlayout.widget.ConstraintLayout>